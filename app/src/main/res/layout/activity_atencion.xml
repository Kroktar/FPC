<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtutorialpoint.androidlogin.AtencionActivity">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:text="Atención Médica"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="446dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.021">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxDesparacitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desparacitacion"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="140dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxAntirabica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anti Rabica" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxSextuple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sextuple"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="228dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxOctuple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Octuple"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="271dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxTriplefelina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Triple Felina"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="315dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBoxLeucemiafelina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leucemia Felina"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="357dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextComentario"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:ems="10"
                android:hint="Comentarios"
                android:inputType="textMultiLine"
                android:maxLength="254" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buttonChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir foto" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/buttonAtencion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresar" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
